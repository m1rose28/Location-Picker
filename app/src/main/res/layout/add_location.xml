<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <fragment
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/map" tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/myCircleView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/circ1"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusCenter"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="+"
        android:textColor="#1B60FF"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/myOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:src="@drawable/rec_overlay"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="&#10094; Back"
        android:id="@+id/backButton"
        android:textColor="#FFFFFF"
        android:onClick="backButton"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="70dp"
        android:layout_alignParentBottom="true"
        android:background="#1B60FF"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_toLeftOf="@+id/plusCenter"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Next &#10095;"
        android:id="@+id/nextButton"
        android:textColor="#FFFFFF"
        android:onClick="nextButton"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="70dp"
        android:layout_alignParentBottom="true"
        android:background="#1B60FF"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/plusCenter"
        />


</RelativeLayout>
